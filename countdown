<body>

<h1>HARUOMILABO カウントダウン</h1>
<div id="countdown"></div>

<script>
// 目標日（JST）
const targetDate = new Date("2026-04-01T00:00:00+09:00").getTime();
const redirectURL = "https://haruomilabo.net/haruomilabo2ndanniversary/haruomilabo-2nd-anniversary.html";

// --- 再読み込みしてもリダイレクトするように ---
// 現在が目標日を過ぎていたら即リダイレクト
if (Date.now() >= targetDate) {
  window.location.href = redirectURL;
}

const timer = setInterval(function() {
  const now = Date.now();
  const distance = targetDate - now;

  if (distance <= 0) {
    clearInterval(timer);
    document.getElementById("countdown").innerHTML = "リダイレクト中…";
    window.location.href = redirectURL;
    return;
  }

  const days = Math.floor(distance / (1000 * 60 * 60 * 24));
  const hours = Math.floor((distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
  const minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
  const seconds = Math.floor((distance % (1000 * 60)) / 1000);

  document.getElementById("countdown").innerHTML =
    `${days}日 ${hours}時間 ${minutes}分 ${seconds}秒`;
}, 1000);
</script>

</body>
</html>
